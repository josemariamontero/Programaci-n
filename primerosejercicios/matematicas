//defino el paquete
package matematicas;

public class ejercicio37 {
	//funcion numeros primos

	public static boolean primo(int x) {
		for (int i = 2; i < x; i++) {
			if (x % 2 == 0) {
				primo = false;
			}
		}
		return true;
	}

	//funcion para devolver los dígitos que contiene un número
	public static int digitos(int x) {
		if (x == 0) {
			return 1;
		} else {
			int numero = 0;
			while (x > 0) {
				x /= 10;
				numero++;
			}
		}
		return numero;
	}
}